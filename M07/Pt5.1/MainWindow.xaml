<Window x:Class="Pt5._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pt5._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="208" Width="531">
    <Grid Margin="0,0,0,1" Background="#FFE6DDDD">
        <Button Content="Añadir Registro" HorizontalAlignment="Left" Margin="124,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="64" Width="98" Background="#FFEAF6FF" Foreground="Black" Click="BtnAddRecord_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.831"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Eliminar Registro" HorizontalAlignment="Left" Margin="310,60,0,0" VerticalAlignment="Top" Height="62" Width="94" Background="#FFEAF6FF" Foreground="Black" Click="BtnDeleteRecord_Click" BorderBrush="#FF707070"/>
        <Label Content="Bienvenido!" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
