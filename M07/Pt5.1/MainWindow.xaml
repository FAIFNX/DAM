<Window x:Class="Pt5._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pt5._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="401" Width="620">
    <Grid Margin="0,0,0,-16" Background="#FFE6DDDD">
        <Button Content="Añadir Registro" HorizontalAlignment="Left" Margin="131,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Height="61" Width="97" Background="#FF3E3E3B" Foreground="White" Click="BtnAddRecord_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.831"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Eliminar Registro" HorizontalAlignment="Left" Margin="368,0,0,0" VerticalAlignment="Center" Height="62" Width="93" Background="#FF3E3E3B" Foreground="White" Click="BtnDeleteRecord_Click"/>

    </Grid>
</Window>
